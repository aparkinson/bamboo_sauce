<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.saucelabs.bamboo</groupId>
    <artifactId>bamboo-sauceondemand-plugin</artifactId>
    <version>${ci.version}</version>
    <name>Bamboo Sauce OnDemand Plugin</name>
    <packaging>atlassian-plugin</packaging>
    <description>This is the Sauce OnDemand plugin for Bamboo</description>
    <url>https://studio.plugins.atlassian.com/wiki/display/BSAD/Sauce+OnDemand</url>
    <licenses>
        <license>
            <name>The Apache Software License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
            <distribution>repo</distribution>
        </license>
    </licenses>
    <organization>
        <name>Sauce Labs</name>
        <url>http://www.saucelabs.com/</url>
    </organization>
    <developers>
        <developer>
            <organization>Systems Bliss Inc.</organization>
            <organizationUrl>http://www.sysbliss.com/</organizationUrl>
        </developer>
        <developer>
            <organization>Sauce Labs</organization>
            <organizationUrl>http://www.saucelabs.com/</organizationUrl>
        </developer>
        <developer>
            <name>Ross Rowe</name>
            <organization>Avain IT</organization>
            <organizationUrl>http://www.avainit.com/</organizationUrl>
        </developer>
    </developers>
    <properties>
        <ci.version>1.3.1</ci.version>
        <bamboo.version>3.0.3</bamboo.version>
        <bamboo.data.version>2.6.1</bamboo.data.version>
        <atlassian.plugins.version>3.3.1</atlassian.plugins.version>
    </properties>
    <scm>
        <connection>scm:git:git://github.com/saucelabs/bambo_sauce.git</connection>
        <developerConnection>>scm:git:git://github.com/saucelabs/bambo_sauce.git</developerConnection>
        <url>git@github.com:saucelabs/bambo_sauce.git</url>
    </scm>
    <build>
        <plugins>
            <plugin>
                <groupId>com.atlassian.maven.plugins</groupId>
                <artifactId>maven-bamboo-plugin</artifactId>
                <version>${atlassian.plugins.version}</version>
                <extensions>true</extensions>
                <configuration>
                    <productVersion>${bamboo.version}</productVersion>
                    <productDataVersion>${bamboo.data.version}</productDataVersion>
                    <!-- The Atlassian SDK doesn't seem to include sub-dependencies, so we have to
                    explictly include them here -->
                    <libArtifacts>
                        <!-- Sauce Rest API dependencies -->
                        <libArtifact>
                            <groupId>com.saucelabs</groupId>
                            <artifactId>sauce-rest-api</artifactId>
                            <version>1.5</version>
                        </libArtifact>
                        <libArtifact>
                            <groupId>org.jvnet.hudson</groupId>
                            <artifactId>trilead-ssh2</artifactId>
                            <version>build212-hudson-5</version>
                        </libArtifact>
                        <libArtifact>
                            <groupId>org.codehaus.jackson</groupId>
                            <artifactId>jackson-mapper-asl</artifactId>
                            <version>1.5.0</version>
                        </libArtifact>
                        <libArtifact>
                            <groupId>org.codehaus.jackson</groupId>
                            <artifactId>jackson-core-asl</artifactId>
                            <version>1.5.0</version>
                        </libArtifact>
                        <libArtifact>
                            <groupId>commons-io</groupId>
                            <artifactId>commons-io</artifactId>
                            <version>1.4</version>
                        </libArtifact>
                        <libArtifact>
                            <groupId>org.json</groupId>
                            <artifactId>json</artifactId>
                            <version>20080701</version>
                        </libArtifact>
                        <libArtifact>
                            <groupId>org.seleniumhq.selenium</groupId>
                            <artifactId>selenium-api</artifactId>
                            <version>2.0b3</version>
                        </libArtifact>
                        <libArtifact>
                            <groupId>com.saucelabs</groupId>
                            <artifactId>sauce-connect</artifactId>
                            <version>2.0r4</version>
                        </libArtifact>
                        <libArtifact>
                            <groupId>org.json</groupId>
                            <artifactId>json</artifactId>
                            <version>20080701</version>
                        </libArtifact>
                    </libArtifacts>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.5</source>
                    <target>1.5</target>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-dependency-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
                <version>2.0</version>
                <dependencies>
                    <dependency>
                        <groupId>org.apache.maven.scm</groupId>
                        <artifactId>maven-scm-provider-gitexe</artifactId>
                        <version>1.2</version>
                    </dependency>
                </dependencies>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-scm-plugin</artifactId>
                <version>1.3</version>
            </plugin>
        </plugins>
    </build>
    <dependencies>
        <!-- Plugin Dependencies-->
        <dependency>
            <groupId>com.saucelabs</groupId>
            <artifactId>sauce-rest-api</artifactId>
            <version>1.5</version>
        </dependency>
        <!-- Sauce Connect 2 -->
        <dependency>
            <groupId>com.saucelabs</groupId>
            <artifactId>sauce-connect</artifactId>
            <version>2.0r4</version>
        </dependency>
        <dependency>
            <groupId>org.json</groupId>
            <artifactId>json</artifactId>
            <version>20080701</version>
        </dependency>
        <!-- Include Jython here because several classes were being excluded from the sauce-connect
        jar -->
        <dependency>
            <groupId>jython</groupId>
            <artifactId>jython</artifactId>
            <version>2.5.0</version>
        </dependency>
        <!-- Dependencies included with Bamboo -->
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>servlet-api</artifactId>
            <version>2.4</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.atlassian.bamboo</groupId>
            <artifactId>atlassian-bamboo-api</artifactId>
            <version>${bamboo.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.atlassian.bamboo</groupId>
            <artifactId>atlassian-bamboo-core</artifactId>
            <version>${bamboo.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.atlassian.bamboo</groupId>
            <artifactId>atlassian-bamboo-web</artifactId>
            <version>${bamboo.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>commons-io</groupId>
            <artifactId>commons-io</artifactId>
            <version>1.4</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.google.guava</groupId>
            <artifactId>guava</artifactId>
            <version>r05</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>jetty</groupId>
            <artifactId>jetty</artifactId>
            <version>5.1.10</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.eclipse.jetty</groupId>
            <artifactId>jetty-server</artifactId>
            <version>7.2.1.v20101111</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.eclipse.jetty</groupId>
            <artifactId>jetty-http</artifactId>
            <version>7.2.1.v20101111</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.eclipse.jetty</groupId>
            <artifactId>jetty-servlet</artifactId>
            <version>7.2.1.v20101111</version>
            <scope>provided</scope>
        </dependency>
        <!-- Test Dependencies-->
        <dependency>
            <groupId>org.mockito</groupId>
            <artifactId>mockito-all</artifactId>
            <version>1.7</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.6</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.seleniumhq.selenium</groupId>
            <artifactId>selenium-remote-control</artifactId>
            <version>2.0b3</version>
            <scope>test</scope>
        </dependency>
        <!-- Version 2.0 has not been deployed to a Maven repository yet, so it must be built and installed from source via git@github.com:infradna/selenium-client-factory.git-->
        <dependency>
            <groupId>com.saucelabs.selenium</groupId>
            <artifactId>sauce-ondemand-driver</artifactId>
            <version>2.0</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.saucelabs.selenium</groupId>
            <artifactId>selenium-client-factory</artifactId>
            <version>2.0</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
    <reporting>
        <plugins>
            <plugin>
                <artifactId>maven-javadoc-plugin</artifactId>
                <configuration>
                    <aggregate>true</aggregate>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.jvnet.sorcerer</groupId>
                <artifactId>maven-sorcerer-plugin</artifactId>
                <version>0.8</version>
            </plugin>
        </plugins>
    </reporting>
</project>
